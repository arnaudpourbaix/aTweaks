  READ_2DA_ENTRIES_NOW buff 2
  PATCH_FOR_EACH pro IN RR#SPAIN fl#cnenp fl#sight rr#pyrot rr#fcsng rr#icew rr#vrpo BEGIN
    FOR (i = buff - 1; i >= 0; --i) BEGIN
